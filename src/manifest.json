{
  "manifest_version": 3,
  "name": "IsThisJobGreen? Jobs (MVP)",
  "version": "0.1.0",
  "description": "Commute-only CO2e estimate for Reed job cards.",
  "permissions": ["storage"],
  "host_permissions": ["https://api.postcodes.io/*", "https://*/*", "http://*/*"],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "IsThisJobGreen? settings"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
