{
  "manifest_version": 3,
  "name": "CarbonRank Jobs (MVP)",
  "version": "0.1.0",
  "description": "Commute-only CO2e estimate for Reed job cards.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.reed.co.uk/*", "https://api.postcodes.io/*"],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "CarbonRank settings"
  },
  "content_scripts": [
    {
      "matches": ["https://www.reed.co.uk/jobs*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
