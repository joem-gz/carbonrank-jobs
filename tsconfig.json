{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "types": ["chrome", "node"],
    "skipLibCheck": true
  },
  "include": ["src", "tests", "scripts", "server"],
  "exclude": ["dist", "node_modules"]
}
